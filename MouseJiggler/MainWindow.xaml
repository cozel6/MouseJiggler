<Window x:Class="MouseJiggler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Jiggler" Height="130" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Ca sa zica seful ca esti la munca" 
                   HorizontalAlignment="Center"
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnStart" Content="Start" Width="80" Margin="0,0,10,0" Click="btnStart_Click"/>
            <Button x:Name="btnStop" Content="Stop" Width="80" Click="btnStop_Click"/>
        </StackPanel>
    </StackPanel>
</Window>